        <form class="clearfix mb-4" action="POST">
       <h3>Make Your Own Recipe</h3>
          <div class="form-group">
            <label for="example-text">Recipe Name</label>
            <input type="text" id="example-recipe" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-text">Ingredient List</label>
            <input type="text" id="example-ingredient" class="form-control" aria-describedby="example-text" placeholder="Enter the ingredient list for your recipe">
          <div class="form-group">
            <label for="example-description">Instructions</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter the instructions"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>My Recipe List:</h3>
        <ul id="example-list" class="list-group"> 
               <p> Recipe Name </p> 
           {{#each examples}}           
          <li data-id="{{this.id}}" class="list-group-item">             
              <a href="example/{{this.id}}"> {{this.recipeName}}</a>
           
               
              <a href="example/{{this.id}}">{{this.author}}</a>
             
           {{!--  <a href="example/{{this.id}}">{{this.description}}</a> --}}
           
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
           <a href="example/{{this.id}}">{{this.author}}</a>
          {{/each}}
        </ul>
